@model Learner
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/MyLayout.cshtml";
}

<h1>Delete</h1>
<div>
    <h3>Are you sure you want to delete this learner?</h3>
    <div>
        <dl class="dl-horizontal">
            <dt>First Mid Name</dt>
            <dd>@Model.FirstMidName</dd>
            <!-- Add the rest of the learner's properties here -->
        </dl>
    </div>
    <form asp-controller="Learner" asp-action="Delete" method="post" class="mt-3">
        <input type="hidden" asp-for="LearnerID" />
        <div class="form-group">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
