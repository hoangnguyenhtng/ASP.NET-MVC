
@{
    Layout = null;
    TempData["Version"] = "22";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="shortcut icon" type="image/x-icon" href="~/assets/images/logo/logo.png">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Đăng nhập | Admin</title>
    <!-- Custom fonts for this template-->
    <link href="~/assets/admin/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">
    <link href="~/assets/Client/css/iziToast.min.css" rel="stylesheet" />
    <!-- Custom styles for this template-->
    <link href="~/assets/admin/css/sb-admin-2.min.css?@TempData["Version"]" rel="stylesheet">
    <style>
        button[disabled] {
            opacity: 0.85;
            cursor: not-allowed !important;
        }

        .bg-gradient-primary {
            background-color: transparent !important;
            background-image: url(../../../assets/admin/img/bg.gif) !important;
        }

        .bg-login-image {
            background: url(https://www.goscience.eu/common/img/login.jpg);
            background-position: center center;
            background-repeat: no-repeat;
        }

        #passwordadmin-error, #usernameadmin-error {
            width: 100%;
        }

        .error {
            color: red !important;
        }
    </style>
</head>
<body class="bg-gradient-primary vh-100">  
    <div class="container h-100">
        <!-- Outer Row -->
        <div class="row justify-content-center h-100">
            <div class="col-xl-10 col-lg-12 col-md-9 m-auto">
                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Chào mừng đến với trang đăng nhập <strong>Admin</strong></h1>
                                    </div>
                                    <form name="login">
                                        <div class="form-group">
                                            <input class="w-100 form-control form-control-user"
                                                   id="usernameadmin" name="usernameadmin" aria-describedby="emailHelp"
                                                   placeholder="Tài khoản">
                                        </div>
                                        <div class="form-group">
                                            <input type="password" class="w-100 form-control form-control-user"
                                                   id="passwordadmin" name="passwordadmin" placeholder="Mật khẩu">
                                        </div>
                                        <div class="form-group ">
                                            <div class="g-recaptcha" data-theme="light" data-sitekey="6LfSna0eAAAAABOWrjvDyY00MvAB6WORYEtSfdlJ">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="custom-control custom-checkbox small">
                                                <input type="checkbox" class="custom-control-input" id="customCheck">
                                                <label style="cursor:pointer;" class="custom-control-label" for="customCheck">
                                                    Nhớ mật khẩu
                                                </label>
                                            </div>
                                        </div>
                                        <button class="btn btn-primary btn-user btn-block">
                                            Đăng nhập
                                        </button>
                                    </form>


                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Bootstrap core JavaScript-->
    <script src="~/assets/admin/vendor/jquery/jquery.min.js?@TempData["Version"]"></script>
    <script src="~/assets/admin/vendor/bootstrap/js/bootstrap.bundle.min.js?@TempData["Version"]"></script>
    <!-- Core plugin JavaScript-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js" integrity="sha512-37T7leoNS06R80c8Ulq7cdCDU5MNQBwlYoy1TX/WUsLFC2eYNqtKlV0QjH7r8JpG/S0GUMZwebnVFLPd6SU5yg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="~/assets/Client/js/iziToast.min.js"></script>
    <script src="~/assets/admin/vendor/jquery-easing/jquery.easing.min.js?@TempData["Version"]"></script>
    <!-- Custom scripts for all pages-->
    <script src="~/assets/admin/js/sb-admin-2.min.js?@TempData["Version"]"></script>
    <script src="~/assets/admin/js/code/main.js?@TempData["Version"]"></script>
    <script src="~/assets/admin/js/code/validateform_login.js"></script>

</body>
</html>
